{
  "compilerOptions": {
    "target": "es6",
    "jsx": "preserve",
    "module": "es6",
    "lib": ["es6"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node"
  },
  "include": ["./**/*.tsx", "./**/*.ts", "./**/*.tsc", "db/index.ts"],
  "exclude": ["node_modules"],
  "jsx": "preserve",
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
